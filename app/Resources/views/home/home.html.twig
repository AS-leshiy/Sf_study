{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <div class="topMenu">
                    Sf_study project
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{path("security_logout")}}" class="switch">logOut</a>
                        <a href="{{path("adminPanel_index")}}" class="switch">admin panel</a>
                        {% else %}
                        <a href="{{path("security_login")}}" class="switch">logIn</a>
                    {% endif %}
                </div>
                <hr/>
            </div>

            <div id="content">
                {% for post in posts %}
                    <article class="post">
                        <h2>
                            <a href="{{ path('home_article', {slug: post.id}) }}">
                                {{ post.title() }}
                            </a>
                        </h2>
                        {{ post.description }}
                    </article><br/>
                {% else %}
                    <h2>No article found</h2>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}

